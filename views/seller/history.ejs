<!DOCTYPE html>
<html>
<head>
    <title>历史商品</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>历史商品</h1>
            <nav class="seller-nav">
                <a href="/seller/dashboard">仪表盘</a>
                <a href="/seller/products/history">历史商品</a>
                <a href="/seller/change-password">修改密码</a>
                <a href="/seller/logout">退出</a>
            </nav>
        </header>
        
        <main>
            <h2>商品列表</h2>
            <% if (products.length > 0) { %>
                <table class="products-table">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>价格</th>
                            <th>状态</th>
                            <th>发布时间</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr>
                                <td><%= product.name %></td>
                                <td>¥<%= product.price %></td>
                                <td><%= product.status %></td>
                                <td><%= product.created_at %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>暂无商品记录</p>
            <% } %>
        </main>
    </div>
</body>
</html>